unit UContractors;

interface
uses UWorkers;
type
  { *** СПИСОК ПОДРЯДЧИКОВ НАЧАЛО *** }

  TContractorsInfo = record  // Блок информации
    Name:string[30];            // Название подрядчика
  end;
  TContrAdr = ^ TContractorsList; // Ссылка на список подрядчиков
  TContractorsList = record  // Список подрядчиков
    Info: TContractorsInfo;    // Блок информации
    WorkersHead: TWorkAdr;     // Ссылка на голову списка рабочих этой компании
    Adr: TContrAdr             // Адрес след. элемента в списке
  end;
  { *** СПИСОК ПОДРЯДЧИКОВ КОНЕЦ *** }


implementation
uses
  System.SysUtils;
const
  ContrFile = 'contractors.brakh';


procedure readContrFile(head:TContrAdr);
var
  f: file of TContractorsInfo;
  Temp: TContrAdr;
begin
  AssignFile(f, ContrFile);
  if fileExists(ContrFile) then
  begin
    Reset(f);
    Writeln('Read file ' + ContrFile);
    Temp := Head;
    while not EOF(f) do
    begin
      new(Temp^.adr);
      Temp:=Temp^.adr;
      Temp^.adr:=nil;
      read(f, Temp^.Info);
      new(Temp^.WorkersHead);
      Temp^.WorkersHead.Adr := nil;
      //OTemp^.Info
    end;
    close(f);
  end
  else
  begin
    Rewrite(f);
    Writeln('Create File');
    close(f);
  end;

end;

procedure saveContrFile(var head:TContrAdr);
var
  f: file of TContrAdr;
  temp: TContrAdr;
begin
  AssignFile(f, ContrFile);
  rewrite(f);
  temp := head^.adr;
  while temp <> nil do
  begin
    write(f, temp^.Info);
    temp:=temp^.adr;
  end;
  close(F);
end;

procedure insertContrList(var head: TContrAdr; name:string[30]);
var
  temp:TContrAdr;
begin
  temp := head;
  while temp^.adr <> nil do
  begin
    temp := temp^.adr;
  end;
  new(temp^.adr);
  temp:=temp^.adr;
  temp^.adr:=nil;
  temp^.Info.Name := name;
end;

procedure writeObjList(var head:TContrAdr);
var
  temp:TContrAdr;
begin
  temp := head^.adr;
  while temp <> nil do
  begin
    writeln(temp^.INFO.Name);
    writeObjList(temp^.WorkersHead);
    temp:=temp^.adr;
  end;
end;

end.
